package Aula;
public class CF {
	String modelo;
	String tamanho;
	boolean aberta;
	int quantidade;
	
	void abrir() {
		this.aberta = true;
	}
	
	void fechar() {
		this.aberta = false;
	}
	
	void riscar() {
		if (aberta == true) {
			System.out.println("Fósforo riscado.");
		}else {
			System.out.println("Erro. Caixa de fósforo fechada. ");
		}
	}
	
	void status() {
		System.out.println("Uma caixa de fósforos modelo " + this.modelo);
		System.out.println("de tamanho " + this.tamanho);
		System.out.println("está " + this.aberta);
		
		if (tampada == true) {
			System.out.println("está destampada. ");
		}else {
			System.out.println("está tampada.");
		}
	}
}
